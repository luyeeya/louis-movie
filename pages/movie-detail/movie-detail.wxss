/* pages/movie-detail/movie-detail.wxss */
.container {
  display: flex;
  flex-direction: column;
}

.back-image {
  width: 100%;
  height: 320rpx;
  -webkit-filter: blur(20px); 
}

.main-info {
  width: 100%;
  height: 320rpx;
  position: absolute;
  display: flex;
  flex-direction: column;
}

.main-title {
  margin-left: 40rpx;
  margin-top: 50rpx;
  color: #fff;
  font-size: 38rpx;
  font-weight: bold;
  letter-spacing: 2px;
}

.sub-title {
  margin-left: 40rpx;
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #fff;
}

.popularity {
  margin-left: 40rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
}

.highlight-text {
  color: #f21146;
  font-size:22rpx;
  margin-right: 10rpx;
}

.const-text {
  color: #666;
  font-size:22rpx;
  margin-right: 20rpx;
}

.float-image {
  width: 175rpx;
  height: 238rpx;
  position: absolute;
  top: 160rpx;
  right: 40rpx;
}

.extra-info {
  margin-left: 40rpx;
  margin-bottom: 50rpx;
  margin-top: 40rpx;
}

.movie-title {
  color: #1f3463;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.flex-row {
  display: flex;
  flex-direction: row;
  align-items: baseline;
  margin-bottom: 10rpx;
}

.label {
  margin-right: 30rpx;
  white-space: nowrap;
  color: #999;
}

.rating-container {
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.rating {
  margin-left: 20rpx;
}

.line {
  width: 100%;
  height: 1rpx;
  background-color: #d9d9d9;
}

.synopsis {
  display: flex;
  flex-direction: column;
  padding: 50rpx 40rpx;
}

.synopsis-title {
  color: #999;  
  margin-bottom: 20rpx;
}

.synopsis-content {
  line-height: 40rpx;
  letter-spacing: 1px;
}

.cast-container {
  display: flex;
  flex-direction: column;
  padding: 50rpx 40rpx;
}

.casts {
  display: flex;
  flex-direction: row;
  height: 300rpx;
}

.cast-title {
  color: #999;
  margin-bottom: 20rpx;
}

.cast {
  display: flex;
  flex-direction: column;
  margin-right: 20rpx;
  align-items: center;
}

.cast-avatar {
  width: 170rpx;
  height: 210rpx;
  margin-bottom: 10rpx;
}