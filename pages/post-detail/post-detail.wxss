/* pages/post-detail/post-detail.wxss */
.container {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  height: 360rpx;
}

.music {
  width: 128rpx;
  height: 128rpx;
  opacity: 0.8;
  position: absolute;
  left: 50%;
  margin-left: -64rpx;
  top: 116rpx;
}

.author-date {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
  margin-left: 30rpx;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
}

.author {
  color: #666;
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
}

.const-text {
  color: #999;
  font-size: 24rpx;
  margin-left: 20rpx;
}

.date {
  color: #999;
  font-size: 24rpx;
  margin-left: 20rpx;
}

.title {
  color: #4b556c;
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing: 2px;
  margin-top: 30rpx;
  margin-left: 40rpx;
}

.tool {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 20rpx 30rpx 0rpx;
}

.operations {
  align-self: flex-end;
}

.operations image {
  width: 64rpx;
  height: 64rpx;
  padding: 12rpx;
  border-radius: 44rpx;
  background-color: #ddd;
  margin-right: 20rpx;
}

.horizon {
  width: 650rpx;
  height: 1px;
  background-color: #e5e5e5;
  position: absolute;
  z-index: -99;
}

.content {
  margin: 20rpx 30rpx 20rpx 30rpx;
  color: #666;
  line-height: 44rpx;
  letter-spacing: 2rpx;
}